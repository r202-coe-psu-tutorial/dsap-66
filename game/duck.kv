<Duck>:
    size: 100, 100
    canvas:
        # Ellipse:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/duck-bg.png'

<Shooter>:
    size: 100, 100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/cannon.png'



<DuckGame>:
    canvas:
        Rectangle:
            pos: 0, self.top * self.buttom_line_ratio
            size: self.width, 5


    Shooter:
        id: shooter
        pos: root.center_x - self.center_x, 0



