<Duck>:
    size: 100, 100
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/duck.png'


<DuckGame>:
    duck: duck_widget
    canvas:
        Rectangle:
            pos: 0, self.center_y - 20
            size: self.width, 5
    
    Duck:
        id: duck_widget
        center: self.parent.center
