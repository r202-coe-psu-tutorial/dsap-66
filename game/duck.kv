<Duck>:
    size: 100, 100
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/duck.png'


<DuckGame>:
    duck_1: duck_widget_1
    duck_2: duck_widget_2
    duck_3: duck_widget_3
    canvas:
        Rectangle:
            pos: 0, self.center_y - 20
            size: self.width, 5
    
    Duck:
        id: duck_widget_1
        center: self.parent.center

 
    Duck:
        id: duck_widget_2
        center: self.parent.center

 
    Duck:
        id: duck_widget_3
        center: self.parent.center
